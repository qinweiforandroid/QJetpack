<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mediator"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline" />

    <Button
        android:id="@+id/mLiveDataToolMediatorBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Mediator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="map"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline" />

    <Button
        android:id="@+id/mLiveDataToolMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOOL_MAP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="switchMap"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline" />

    <Button
        android:id="@+id/mLiveDataToolSwitchMapBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TOOL_SWITCHMAP" />

</LinearLayout>